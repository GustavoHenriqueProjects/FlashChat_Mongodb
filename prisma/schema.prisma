generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum TypeUser {
  CLIENT
  DIARIST
}

model RegisterUser {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  typeUser TypeUser
  userMysqlId Int 
  name String
  photoUrl String

  @@unique([typeUser, userMysqlId])
}

model Chat {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  serviceMysqlId Int 
  typeSender TypeUser
  senderId Int
  typeRecipient TypeUser
  recipientId Int
  message String
  date DateTime
}